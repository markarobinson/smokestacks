@model smokeStacks.Models.ContactModel
@{
    ViewBag.Title = "Contact";
}
<div class="container">
<h1>How to contact us:</h1>
<a href="mailto:me@home.com">Send me an Email.</a>
<h2>OR</h2>
@Html.AntiForgeryToken()
@Html.ValidationSummary("", new { @class = "text-danger" })
@using (Html.BeginForm("Send", "Contact", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{


     <div class="form-group">
         <div class="col-sm-2 control-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
         </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 control-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="col-sm-2 control-label">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="from-group">
        <div class="col-sm-2 control-label">
            @Html.LabelFor(model => model.Message)
        </div>
        <div class="col-sm control-label">
            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @cols = "50", @rows = "5" })
        </div>
    </div>
    <div class="col-sm-offset2 col-sm-10">
        <input type="submit" class="btn btn-default" value="Register" />
    </div>

}

</div>